{
  "name": "modabase-live",
  "version": "1.0.0",
  "description": "Modern e-commerce platform with admin panels and mobile optimization",
  "author": "İbrahim Kaya",
  "license": "MIT",
  "homepage": "https://moda-base-live.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/justibrahimkaya/ModaBase-Live.git"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:safe": "DATABASE_URL=file:./dev.db next dev",
    "build": "prisma generate && next build",
    "build:local": "prisma generate && prisma db push && next build",
    "start": "next start",
    "lint": "next lint",
    "security:check": "npm audit --production",
    "security:headers": "node scripts/check-security-headers.js",
    "postinstall": "prisma generate",
    "vercel-build": "prisma generate && next build",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:dev": "DATABASE_URL=file:./dev.db tsx prisma/seed.ts",
    "db:push": "prisma db push",
    "db:push:dev": "DATABASE_URL=file:./dev.db prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:dev": "DATABASE_URL=file:./dev.db prisma migrate dev",
    "db:generate": "prisma generate",
    "db:deploy": "prisma db push",
    "db:backup": "echo 'Production backup alın: Supabase Dashboard > Database > Backups'",
    "db:studio": "DATABASE_URL=file:./dev.db prisma studio",
    "deploy:safe": "npm run db:backup && git push",
    "update-deps": "npm update",
    "security-audit": "npm audit",
    "type-check": "tsc --noEmit",
    "check:env": "node scripts/check-production-env.js"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.1.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.12.0",
    "autoprefixer": "^10.4.20",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.0",
    "framer-motion": "^12.23.6",
    "iconv-lite": "^0.6.3",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.525.0",
    "next": "^15.4.1",
    "next-auth": "^4.24.7",
    "node-forge": "^1.3.1",
    "nodemailer": "^6.10.1",
    "postcss": "^8.4.49",
    "prisma": "^6.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "xml2js": "^0.6.2",
    "xmlbuilder2": "^3.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.19.8",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfkit": "^0.17.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.4.1",
    "tsx": "^4.20.3",
    "typescript": "^5.6.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
